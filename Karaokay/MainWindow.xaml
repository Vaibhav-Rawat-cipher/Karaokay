<Window x:Class="Karaokay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Karaokay" Height="700" Width="1200"
        Background="#1a1a1a"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style x:Key="SearchTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                            Margin="{TemplateBinding Padding}"
                                            VerticalAlignment="Center"/>
                                <TextBlock Text="Search songs..."
                                         Foreground="#666"
                                         Margin="15,0,0,0"
                                         VerticalAlignment="Center"
                                         IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#555" BorderThickness="2" CornerRadius="20" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- App Title -->
                <TextBlock Grid.Column="0" 
                          Text="Karaokay" 
                          FontSize="32" 
                          FontWeight="Bold"
                          Foreground="White"
                          VerticalAlignment="Center"
                          Margin="10,0,30,0"/>

                <!-- Search Bar -->
                <Grid Grid.Column="1" MaxWidth="500" HorizontalAlignment="Center">
                    <TextBox x:Name="SearchBox" 
                            Style="{StaticResource SearchTextBox}"
                            TextChanged="SearchBox_TextChanged"/>
                    <materialDesign:PackIcon Kind="Magnify" 
                                           Width="2400" 
                                           Height="24"
                                           Foreground="#666"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           Margin="0,0,15,0"
                                           IsHitTestVisible="False"/>
                </Grid>

                <!-- Window Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="─" 
                           Style="{StaticResource RoundedButton}"
                           Width="50" Height="40"
                           Margin="5,0"
                           Click="MinimizeButton_Click"/>
                    <Button Content="□" 
                           Style="{StaticResource RoundedButton}"
                           Width="50" Height="40"
                           Margin="5,0"
                           Click="MaximizeButton_Click"/>
                    <Button Content="✕" 
                           Style="{StaticResource RoundedButton}"
                           Width="50" Height="40"
                           Margin="5,0"
                           Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="20,0,20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Song List -->
                <Border Grid.Column="0" 
                       BorderBrush="#555" 
                       BorderThickness="2" 
                       CornerRadius="20"
                       Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Filter Buttons -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <Button Content="All" 
                                   Style="{StaticResource RoundedButton}"
                                   Margin="0,0,10,0"
                                   Click="FilterButton_Click"
                                   Tag="All"/>
                            <Button Content="Favorites" 
                                   Style="{StaticResource RoundedButton}"
                                   Margin="0,0,10,0"
                                   Click="FilterButton_Click"
                                   Tag="Favorites"/>
                            <Button Content="Recent" 
                                   Style="{StaticResource RoundedButton}"
                                   Margin="0,0,10,0"
                                   Click="FilterButton_Click"
                                   Tag="Recent"/>
                            <Button Content="☰" 
                                   Style="{StaticResource RoundedButton}"
                                   Width="45"
                                   Click="MenuButton_Click"/>
                        </StackPanel>

                        <!-- Song List -->
                        <ScrollViewer Grid.Row="1" 
                                    VerticalScrollBarVisibility="Auto"
                                    HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl x:Name="SongListView">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource SongListItem}"
                                               MouseLeftButtonDown="SongItem_Click"
                                               Tag="{Binding}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Thumbnail -->
                                                <Border Grid.Column="0" 
                                                       Width="50" Height="50"
                                                       CornerRadius="8"
                                                       Background="#333">
                                                    <Image Source="{Binding ThumbnailUrl}" 
                                                          Stretch="UniformToFill"/>
                                                </Border>

                                                <!-- Song Info -->
                                                <StackPanel Grid.Column="1" 
                                                          Margin="15,0"
                                                          VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Title}" 
                                                             FontSize="16" 
                                                             FontWeight="SemiBold"
                                                             Foreground="White"
                                                             TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="{Binding Artist}" 
                                                             FontSize="13" 
                                                             Foreground="#999"
                                                             Margin="0,3,0,0"
                                                             TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>

                                                <!-- Duration -->
                                                <TextBlock Grid.Column="2" 
                                                         Text="{Binding Duration}" 
                                                         FontSize="13"
                                                         Foreground="#999"
                                                         VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Right Panel - Song Details -->
                <Border Grid.Column="2" 
                       BorderBrush="#555" 
                       BorderThickness="2" 
                       CornerRadius="20"
                       Padding="25">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Title -->
                        <TextBlock Grid.Row="0" 
                                  x:Name="DetailTitle"
                                  Text="Title" 
                                  FontSize="28" 
                                  FontWeight="Bold"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,20"/>

                        <!-- Thumbnail -->
                        <Border Grid.Row="1" 
                               Height="200"
                               CornerRadius="15"
                               Background="#333"
                               Margin="0,0,0,20">
                            <Image x:Name="DetailThumbnail" 
                                  Stretch="UniformToFill"/>
                        </Border>

                        <!-- Song Details -->
                        <StackPanel Grid.Row="2" Margin="0,0,0,20">
                            <Border Height="2" Background="#555" Margin="0,10"/>
                            <Grid Margin="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Artist:" Foreground="#999" FontSize="14"/>
                                <TextBlock Grid.Column="1" x:Name="DetailArtist" Text="Unknown" Foreground="White" FontSize="14" Margin="10,0,0,0"/>
                            </Grid>
                            
                            <Border Height="2" Background="#555" Margin="0,10"/>
                            <Grid Margin="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Duration:" Foreground="#999" FontSize="14"/>
                                <TextBlock Grid.Column="1" x:Name="DetailDuration" Text="0:00" Foreground="White" FontSize="14" Margin="10,0,0,0"/>
                            </Grid>
                            
                            <Border Height="2" Background="#555" Margin="0,10"/>
                            <Grid Margin="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Genre:" Foreground="#999" FontSize="14"/>
                                <TextBlock Grid.Column="1" x:Name="DetailGenre" Text="Unknown" Foreground="White" FontSize="14" Margin="10,0,0,0"/>
                            </Grid>
                        </StackPanel>

                        <!-- Playback Controls -->
                        <Grid Grid.Row="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Play Button -->
                            <Button Grid.Row="0"
                                   x:Name="PlayButton"
                                   Width="60" Height="60"
                                   Style="{StaticResource RoundedButton}"
                                   HorizontalAlignment="Left"
                                   Click="PlayButton_Click"
                                   Margin="0,0,0,10">
                                <materialDesign:PackIcon Kind="Play" Width="30" Height="30"/>
                            </Button>

                            <!-- Progress Bar -->
                            <Grid Grid.Row="1">
                                <Slider x:Name="ProgressSlider"
                                       Minimum="0"
                                       Maximum="100"
                                       Value="0"
                                       VerticalAlignment="Center"
                                       Foreground="#666"
                                       ValueChanged="ProgressSlider_ValueChanged"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
