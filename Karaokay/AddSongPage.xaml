<Window x:Class="Karaokay.AddSongPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Add Song - Karaokay" 
        MinHeight="500" MinWidth="400"
        Height="750" Width="900"
        Background="#1a1a1a"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#6200ea"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="30,12"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7c4dff"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#5200c6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#2a2a2a"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#555" BorderThickness="2" CornerRadius="20" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Background="#252525" Margin="2,2,2,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="25,0">
                    <Button Content="←" 
                           Width="45" Height="45"
                           Style="{StaticResource SecondaryButton}"
                           FontSize="24"
                           Padding="0"
                           Margin="0,0,15,0"
                           Click="BackButton_Click"/>
                    <TextBlock Text="Add New Song" 
                              FontSize="28" 
                              FontWeight="Bold"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Window Controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,15,0">
                    <Button Content="─" 
                           Width="45" Height="40"
                           Style="{StaticResource SecondaryButton}"
                           Padding="0"
                           Margin="5,0"
                           Click="MinimizeButton_Click"/>
                    <Button Content="✕" 
                           Width="45" Height="40"
                           Style="{StaticResource SecondaryButton}"
                           Padding="0"
                           Margin="5,0"
                           Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>

            <!-- Main Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
                <Grid Margin="20,10,20,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Upload Section -->
                    <Border Grid.Row="0" 
                           BorderBrush="#555" 
                           BorderThickness="2" 
                           CornerRadius="15"
                           Background="#252525"
                           Padding="20"
                           Margin="0,0,0,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Upload Icon and Text -->
                            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,15">
                                <materialDesign:PackIcon Kind="CloudUpload" 
                                                       Width="60" 
                                                       Height="60"
                                                       Foreground="#6200ea"
                                                       HorizontalAlignment="Center"/>
                                <TextBlock Text="Upload Your Song" 
                                          FontSize="20" 
                                          FontWeight="Bold"
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          Margin="0,10,0,5"/>
                                <TextBlock Text="Drag and drop your audio file here or click to browse" 
                                          FontSize="13" 
                                          Foreground="#999"
                                          TextWrapping="Wrap"
                                          TextAlignment="Center"
                                          HorizontalAlignment="Center"
                                          MaxWidth="350"/>
                            </StackPanel>

                            <!-- File Selection -->
                            <Border Grid.Row="1" 
                                   BorderBrush="#6200ea" 
                                   BorderThickness="2"
                                   CornerRadius="10"
                                   Background="#2a2a2a"
                                   Padding="20"
                                   MinHeight="60"
                                   Margin="0,0,0,15"
                                   MouseLeftButtonDown="UploadArea_Click"
                                   Cursor="Hand">
                                <StackPanel>
                                    <TextBlock x:Name="SelectedFileText"
                                             Text="No file selected"
                                             FontSize="15"
                                             Foreground="#999"
                                             HorizontalAlignment="Center"
                                             TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <!-- Browse Button -->
                            <Button Grid.Row="2"
                                   Content="Browse Files"
                                   Style="{StaticResource ActionButton}"
                                   HorizontalAlignment="Center"
                                   Click="BrowseButton_Click"/>
                        </Grid>
                    </Border>

                    <!-- Song Details Form -->
                    <Border Grid.Row="1" 
                           BorderBrush="#555" 
                           BorderThickness="2" 
                           CornerRadius="15"
                           Background="#252525"
                           Padding="20"
                           Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Song Details" 
                                      FontSize="18" 
                                      FontWeight="Bold"
                                      Foreground="White"
                                      Margin="0,0,0,15"/>

                            <!-- Song Title -->
                            <TextBlock Text="Song Title *" 
                                      FontSize="13" 
                                      Foreground="#999"
                                      Margin="0,0,0,6"/>
                            <TextBox x:Name="TitleTextBox"
                                    Style="{StaticResource ModernTextBox}"
                                    Margin="0,0,0,15"/>

                            <!-- Artist Name -->
                            <TextBlock Text="Artist Name *" 
                                      FontSize="13" 
                                      Foreground="#999"
                                      Margin="0,0,0,6"/>
                            <TextBox x:Name="ArtistTextBox"
                                    Style="{StaticResource ModernTextBox}"
                                    Margin="0,0,0,15"/>

                            <!-- Genre -->
                            <TextBlock Text="Genre" 
                                      FontSize="13" 
                                      Foreground="#999"
                                      Margin="0,0,0,6"/>
                            <ComboBox x:Name="GenreComboBox"
                                     Background="#2a2a2a"
                                     Foreground="White"
                                     BorderBrush="#555"
                                     BorderThickness="2"
                                     Padding="15,12"
                                     FontSize="15"
                                     Margin="0,0,0,15">
                                <ComboBoxItem Content="Pop" IsSelected="True"/>
                                <ComboBoxItem Content="Rock"/>
                                <ComboBoxItem Content="Hip Hop"/>
                                <ComboBoxItem Content="R&amp;B"/>
                                <ComboBoxItem Content="Country"/>
                                <ComboBoxItem Content="Electronic"/>
                                <ComboBoxItem Content="Jazz"/>
                                <ComboBoxItem Content="Classical"/>
                                <ComboBoxItem Content="Other"/>
                            </ComboBox>

                            <!-- YouTube URL (Optional) -->
                            <TextBlock Text="YouTube URL (Optional)" 
                                      FontSize="13" 
                                      Foreground="#999"
                                      Margin="0,0,0,6"/>
                            <TextBox x:Name="YouTubeUrlTextBox"
                                    Style="{StaticResource ModernTextBox}"
                                    Margin="0,0,0,8"/>
                            <TextBlock Text="If you provide a YouTube URL, we'll extract the audio automatically" 
                                      FontSize="11" 
                                      Foreground="#666"
                                      FontStyle="Italic"
                                      TextWrapping="Wrap"
                                      Margin="0,0,0,15"/>
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <Grid Grid.Row="2" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                               Content="Cancel"
                               Style="{StaticResource SecondaryButton}"
                               MinWidth="100"
                               Click="CancelButton_Click"/>
                        <Button Grid.Column="2"
                               x:Name="GenerateButton"
                               Content="Generate Karaoke"
                               Style="{StaticResource ActionButton}"
                               MinWidth="120"
                               Click="GenerateButton_Click"/>
                    </Grid>

                    <!-- Progress Indicator -->
                    <Border x:Name="ProgressPanel"
                           Grid.Row="2"
                           Visibility="Collapsed"
                           Background="#252525"
                           BorderBrush="#6200ea"
                           BorderThickness="2"
                           CornerRadius="10"
                           Padding="30"
                           Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock x:Name="ProgressText"
                                     Text="Processing your song..."
                                     FontSize="16"
                                     FontWeight="SemiBold"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,15"/>
                            <ProgressBar x:Name="ProgressBar"
                                       Height="8"
                                       IsIndeterminate="True"
                                       Foreground="#6200ea"
                                       Background="#2a2a2a"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
